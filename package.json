{
  "name": "gospelsmarts",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.3.1",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo run dev --filter=web --filter=@gospelsmarts/backend",
    "dev:web": "turbo run dev --filter=web",
    "dev:backend": "turbo run dev --filter=@gospelsmarts/backend",
    "build": "turbo run build",
    "start": "turbo run start --filter=web",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "deploy:backend": "turbo run deploy --filter=@gospelsmarts/backend"
  },
  "devDependencies": {
    "tailwindcss": "^4",
    "turbo": "^2.8.5"
  }
}
